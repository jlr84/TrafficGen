#!/bin/bash
#
#usage: $ ./ITGSendUDP_cbr <recv ip> <logserv ip> <bitrate> <duration>
#       <ip> is in the 10.0.0.x range
#       <id> is for enumerating the logs
#
#   -a  dest ip
#   -rp rcv port (9500)
#       -sp src port (9400)
#
#   -T  protocol type
#
#   -C  packets/sec
#   -c  packtsize <constant> in bytes
#       UDP: 1500 - 20 - 8 =  1472
#       TCP: 1500 - 20 - 20 = 1460
#
#   -u  min .. max packetsize <variable>
#   -t  duration in milisec
#
#   -l  send_log_file
#   -L  logserv ip
#   -x  recv_log_file
#   -X  logserv ip
#
############################################
#DESTINATIONS
destserv="${1}"
logserv="${2}"
#GENERATE LOGFILENAMES
sendname="log_udp_snd_${3}_cbr"
recvname="log_udp_rcv_${3}_cbr"
#TRAFFIC
bitrate=1536
duration="${4}"
packetcount="${5}"
#
#GO TEST SOME STUFF
~/mininet/TrafficGen/D-ITG-2.8.1-r1023/bin/ITGSend -a $destserv -rp 9500 -T UDP -C $packetcount -c $bitrate -t $duration -l $sendname -L $logserv -x $recvname -X $logserv
